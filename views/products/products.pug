extends ../layout/layout

block content
    h1 Sản phẩm
    .row
        each product in products
            .col-md-3.product-grid.card
                img.card-img-top(src=product.image)
                .card-body
                    h5.card-title= product.name
                    p.card-text= product.descriptions
                    a.btn.btn-primary Add to cart